<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:orientation="vertical" >

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:orientation="vertical" >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
       android:orientation="horizontal" >

        <TextView
            android:id="@+id/userPosText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"          
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <com.teraim.nils.ProvytaView
        android:id="@+id/provyta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
 </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tagtabell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="*" >
        </TableLayout>

        <Button
            android:id="@+id/tagknapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:onClick="addRow"
            android:text="LÃ¤gg till en ny delyta"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/oldpichead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arkivbilder_st_v_st_nord_syd_"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <GridView
            android:id="@+id/picgridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:horizontalSpacing="10dp"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:weightSum="4" />
    </LinearLayout>

</LinearLayout>