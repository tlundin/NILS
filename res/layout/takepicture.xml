<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/nyabilder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nytagna bilder"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <GridView
            android:id="@+id/gridview_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:horizontalSpacing="10dp"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:weightSum="4" />

        <TextView
            android:id="@+id/gamlabilder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Gamla bilder"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <GridView
            android:id="@+id/gridview_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:horizontalSpacing="10dp"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:weightSum="4" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/mittpunktB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:onClick="setMittpunkt"
                android:text="Sätt mittpunkt" />

            <Button
                android:id="@+id/riktpunktB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setRiktpunkter"
                android:text="Sätt riktpunkter" />
            
             <Button
                android:id="@+id/startB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="startCollect"
                android:text="Börja datainsamling" />
             			
            <TextView
                android:id="@+id/mittText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
        <com.teraim.nils.ProvytaView
        android:id="@+id/provytaF"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="500" />
    

</LinearLayout>