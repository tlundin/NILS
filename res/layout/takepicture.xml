<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/nyabilder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Nytagna bilder"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

   <GridView
        android:id="@+id/gridview_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:horizontalSpacing="10dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />

       <TextView
        android:id="@+id/gamlabilder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Gamla bilder"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

   <GridView
        android:id="@+id/gridview_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:horizontalSpacing="10dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />
   
   <com.teraim.nils.ProvytaView 
      android:id="@+id/provytaF" 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="2" />
   
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal" >

       <Button
           android:id="@+id/mittpunktB" 
           android:text="Sätt mittpunkt"
           android:enabled="false"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:onClick="setMittpunkt" />

       <Button
            android:id="@+id/riktpunktB" 
           android:text="Sätt riktpunkter"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:onClick="setRiktpunkter" />
	<TextView 
	 	   android:id="@+id/mittText" 
	       android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           
	    />
   </LinearLayout>

</LinearLayout>
