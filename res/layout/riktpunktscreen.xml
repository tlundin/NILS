<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<TableLayout  
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:id="@+id/riktpunkttable"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:layout_marginLeft="10dp"
    android:shrinkColumns="*"  
    android:stretchColumns="*">
    
    <TableRow 
    	android:layout_width="match_parent"  
    	android:layout_height="match_parent"
    	android:paddingRight="5dp">
    	
    	  <TextView
    	      android:text="Riktning"
    	      android:textSize="25sp"
    	      android:textStyle="bold" />

    	  <TextView
    	      android:text="Avstånd"
    	      android:textSize="25sp"
    	      android:textStyle="bold" />

    	  <TextView
    	      android:text="Objekt"
    	      android:textSize="25sp"
    	      android:textStyle="bold" />
    	  	  	  
	</TableRow>
	
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <EditText
            android:id = "@+id/edit_txt1_1"
            android:layout_marginRight="10dp"          
            android:text=""  
            android:inputType="number"   
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id = "@+id/edit_txt1_2"
            android:layout_marginRight="10dp"
            android:editable="true"
            android:text=""
            android:inputType="number"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button 
            android:id = "@+id/rikt1_button"
            android:text = "Välj objekt.."
       		android:onClick = "onSelectRiktPunkt"
            />
    </TableRow>

</TableLayout> 
</LinearLayout>