<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
        <gradient
            android:angle="90"
            android:startColor="#E8E8E6"
            android:endColor="@color/background"
            android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#061A1F" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
     <shape>
       <gradient
            android:angle="90"
            android:startColor="@color/background"
            android:endColor="#FFFFFF"
            android:type="linear" />
         <stroke
                android:width="1dp"
                android:color="#061A1F" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>