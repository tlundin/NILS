<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_selected="true" >
         <shape>
            <solid
                android:color="#1E6958" />
            <stroke
                android:width="1dp"
                android:color="@color/black" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>      
    <item android:state_focused="true" >
         <shape>
            <solid
                android:color="#1E6958" />
            <stroke
                android:width="1dp"
                android:color="@color/black" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>        

 
</selector>